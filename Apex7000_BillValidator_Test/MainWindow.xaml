<Window x:Class="Apex7000_BillValidator_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">
    <DockPanel LastChildFill="true">

        <StatusBar  DockPanel.Dock="Bottom">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem Grid.Column="0">
                <TextBlock>Port:</TextBlock>
            </StatusBarItem>
            <StatusBarItem Grid.Column="1">
                <TextBlock Name="PortName">COM1</TextBlock>
            </StatusBarItem>
            <StatusBarItem Grid.Column="3">
                <TextBlock>State:</TextBlock>
            </StatusBarItem>
            <StatusBarItem Grid.Column="4">
                <TextBlock Name="State">Idle</TextBlock>
            </StatusBarItem>
        </StatusBar>

        <Grid Name="twobytwo" >
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ListView Name="ConsoleView" Grid.Column="1"/>

            <Grid Name="NoteBack" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Bill 1" Grid.Row="0"/>
                <Label Content="Bill 2" Grid.Row="1"/>
                <Label Content="Bill 3" Grid.Row="2"/>
                <Label Content="Bill 4" Grid.Row="3"/>
                <Label Content="Bill 5" Grid.Row="4"/>
                <Label Content="Bill 6" Grid.Row="5"/>
                <Label Content="Bill 7" Grid.Row="6"/>

                <Label Content="0" Grid.Column="1" Grid.Row="0" HorizontalContentAlignment="Right" BorderBrush="#FF0F0E0E" BorderThickness="1" Margin="2"/>
                <Label Content="0" Grid.Column="1" Grid.Row="1" HorizontalContentAlignment="Right" BorderBrush="#FF0F0E0E" BorderThickness="1" Margin="2"/>
                <Label Content="0" Grid.Column="1" Grid.Row="2" HorizontalContentAlignment="Right" BorderBrush="#FF0F0E0E" BorderThickness="1" Margin="2"/>
                <Label Content="0" Grid.Column="1" Grid.Row="3" HorizontalContentAlignment="Right" BorderBrush="#FF0F0E0E" BorderThickness="1" Margin="2"/>
                <Label Content="0" Grid.Column="1" Grid.Row="4" HorizontalContentAlignment="Right" BorderBrush="#FF0F0E0E" BorderThickness="1" Margin="2"/>
                <Label Content="0" Grid.Column="1" Grid.Row="5" HorizontalContentAlignment="Right" BorderBrush="#FF0F0E0E" BorderThickness="1" Margin="2"/>
                <Label Content="0" Grid.Column="1" Grid.Row="6" HorizontalContentAlignment="Right" BorderBrush="#FF0F0E0E" BorderThickness="1" Margin="2"/>
            </Grid>

            <Grid Name="StateMachine" Grid.Row="1" Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Button Content="Power Up" HorizontalAlignment="Left" Margin="21,6.509,0,0" VerticalAlignment="Top" Width="75"/>
                <Button Content="Idle" Grid.Column="2" HorizontalAlignment="Left" Margin="30,2.862,0,0" VerticalAlignment="Top" Width="75" Grid.Row="1"/>
                <Button Content="Accepting" Grid.Column="2" HorizontalAlignment="Left" Margin="30,10,0,0" Grid.Row="3" VerticalAlignment="Top" Width="75"/>
                <Button Content="Escrowed" Grid.Column="2" HorizontalAlignment="Left" Margin="30,7.872,0,0" Grid.Row="5" VerticalAlignment="Top" Width="75"/>
                <Button Content="Rejected" Grid.Column="4" HorizontalAlignment="Left" Margin="32,7.872,0,0" Grid.Row="5" VerticalAlignment="Top" Width="75"/>
                <Button Content="Cheated" Grid.Column="5" HorizontalAlignment="Left" Margin="26,7.872,0,0" Grid.Row="5" VerticalAlignment="Top" Width="75"/>
                <Button Content="Stacking" Grid.Column="2" HorizontalAlignment="Left" Margin="30,9.998,0,0" Grid.Row="7" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.093,0.169"/>
                <Button Content="Returning" Grid.Column="3" HorizontalAlignment="Left" Margin="27,9.999,0,0" Grid.Row="7" VerticalAlignment="Top" Width="75"/>
                <Button Content="Stacked" Grid.Column="2" HorizontalAlignment="Left" Margin="30,2.862,0,0" Grid.Row="9" VerticalAlignment="Top" Width="75"/>
                <Button Content="Returned" Grid.Column="3" HorizontalAlignment="Left" Margin="27,2.862,0,0" Grid.Row="9" VerticalAlignment="Top" Width="75"/>
                <Button Content="Disabled" Grid.Column="1" HorizontalAlignment="Left" Margin="21,2.862,0,0" VerticalAlignment="Top" Width="75" Grid.Row="1"/>
                <Button Content="Failure" HorizontalAlignment="Left" Margin="59,8.175,0,0" Grid.Row="4" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-42.796"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
                <Button Content="Stacker Full" HorizontalAlignment="Left" Margin="124,0,0,2.865" Grid.Row="4" VerticalAlignment="Bottom" Width="75" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-44.66"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
                <Button Content="Bill Jammed" Grid.Column="1" HorizontalAlignment="Left" Margin="59,9.326,0,0" Grid.Row="4" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-46.029"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
            </Grid>

        </Grid>
    </DockPanel>
</Window>
